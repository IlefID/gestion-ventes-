{% extends 'base.html.twig' %}

{% block title %}New Systeme{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
   <style>
    .aa{
                padding: 30px;
                width: 100%;
                height: 20px;
                }

               /* Styles spécifiques pour le dialogue */
    .content1-dialog {
        background-color: rgba(0, 0, 0, 0.5); /* Fond semi-transparent */
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999; /* Met en avant-plan */
    }

    /* Styles pour le contenu du dialogue */
    .content1 {
        background-color: skyblue;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        width: 100%;
    }

    .content1-header {
        padding-bottom: 10px;
        border-bottom: 1px solid #ccc;
        background-color:skyblue;
    }

    .content1-body {
        padding: 20px 0;
    }

    .content1-footer {
        text-align: right;
        padding-top: 10px;
        border-top: 1px solid #ccc;
    }

    /* Ajoutez vos styles CSS personnalisés ici */
    .form label {
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .form-control {
        width: 100%;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .form-control:focus {
        border-color: #80bdff;
        outline: 0;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }
    h5.content1-title{
        text-align:center;
        font-family: cursive; 
    }
    
   </style>
{% endblock %}


{% block body %}
<div>
    {% include 'admin/admin.html.twig' %}
</div>
<div class="aa">

</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="content1-dialog">
                <div class="content1">
                    <div class="content1-header">
                        <h5 class="content1-title">Create new Systeme</h5>
                    </div>
                    <div class="content1-body">
                        {{ form_start(form, {'attr': {'id': 'myForm', 'class': 'form'}}) }}
                        {{ form_widget(form) }}
                        {{ form_end(form) }}
                    </div>
                    <div class="content1-footer">
                        <button type="submit" form="myForm" class="btn btn-primary"><i class="fa-solid fa-circle-plus"></i> {{ button_label|default('Save') }}</button>
                        <a href="{{ path('app_systeme_index') }}" class="btn btn-secondary"><sub><i class="bi bi-arrow-return-left"></i></sub> Back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
